# ----------------------------
# SPA (Vite / React) settings
# ----------------------------

# ✅ Leave this as a *relative* path so every fetch goes through
#    http://localhost:5173/api/... and Vite forwards it to Apache.
VITE_API_BASE_URL=/api

# The host/port where Vite serves the React app
VITE_BASE_URL=http://localhost:5173

# Any other React‑only flags …
VITE_ENABLE_ANALYTICS=false
VITE_SENTRY_DSN=

# ------------------------------------------------
# PHP‑side settings (only if you load them via getenv)
# ------------------------------------------------
REDIS_DSN="tcp://127.0.0.1:6379?database=0&timeout=2.5&prefix=PHPREDIS_SESSION:"
COOKIE_SECURE=false
COOKIE_SAMESITE=Lax
SPA_ORIGIN=http://localhost:5173
APP_DEBUG=true         # turn off in prod
